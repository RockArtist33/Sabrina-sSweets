@model SabrinaSweets.Models.ViewModels.ViewModelShop

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div style="background-color:#ffb381" class="ScrollingImages">
        <img style="width:200px;z-index:999999;" class="Scrollarrow left" src="~/img/Scrollarrow.png">
        <img style="transform:translate(-130px);width:1920px;" class="ScrollImage left" src="~/img/webp/easter_eggs_slider_desktop_jpg.webp">
        <img style="width:200px;z-index:999999;transform:translate(-250px);" class="Scrollarrow" src="~/img/Scrollarrow.png">
    </div>
    <div>
        <div class="ScrollableItemsContainer">
            @foreach (var item in Model.ShoppingCategories) 
            {
                <span style="display:block;margin-bottom:7.5px;margin-left:auto;margin-right:auto;text-align:center;font-size:40px;">@Html.DisplayFor(modelItem => item.Name)</span>
                <div style="display:block;width:100%;height:1px;background-color:rgb(230,170,0);margin:10px;margin-left:none;margin-right:none;margin-bottom:7.5px;"></div>
                <div class="ScrollableItemslist">
                    @foreach(var item1 in Model.ShoppingItems) 
                    {
                        <div class="ScrollableItemsOuter">
                            <div style="margin:auto">
                                <img style="margin-left:15px;border:none;border-bottom:1px solid rgb(230,230,230)" src="@Html.DisplayFor(modelitem => item1.Image)" />
                                <div style="margin-bottom:none;">
                                    <h3 style="margin-left:10px;margin-bottom:12.5px;text-align:center;transform:translate(-20px)">
                                        @Html.DisplayFor(modelItem => item1.Name)
                                    </h3>
                                    <div style="display:flex;flex-direction:row;">
                                        <p style="margin-left:10px;margin-bottom:20px;text-align:right;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
                                                    Size: @Html.DisplayFor(modelitem => item1.Size)
                                        </p>
                                        <div class="flex-fill"></div>
                                        <p style="margin-left:10px;margin-bottom:20px;transform:translate(-50px);text-align:right;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
                                            Price: £@Html.DisplayFor(modelItem => item1.price) ex.VAT
                                        </p>
                                    </div>
                                    <a style="display:block;width:298px;height:50px;text-align:center;text-decoration:none;color:black;background-color:rgb(243,100,0)" href="/Items?id=@Html.DisplayFor(modelitem => item1.ShoppingItemId)"><span style="display:block;font-size:25px;auto;transform:translate(0,5px)">Order Now</span></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div style="margin-top:50px;margin-bottom:25px;">
                    <img style="width:32.5%;height:250px;" src="~/img/jpg/images.jpg" />
                    <img style="width:32.5%;height:250px;" src="~/img/jpg/images (1).jpg" />
                    <img style="width:32.5%;height:250px;" src="~/img/jpg/images (2).jpg" />
                </div>
            }
                
        </div>
    </div>
</div>