@model SabrinaSweets.Models.ViewModels.ViewModelShop

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <div class="ScrollingImages">
        <img class="Scrollarrow left" src="~/img/Scrollarrow.png">
        <img class="ScrollImage left" src="~/img/prime.webp">
        <img class="Scrollarrow" src="~/img/Scrollarrow.png">
    </div>
    <div>
        <div class="ScrollableItemsContainer">
            @foreach (var item in Model.ShoppingCategories) 
            {
                <span style="margin-left:auto;margin-right:auto;text-align:center;font-size:40px;">@Html.DisplayFor(modelItem => item.Name)</span>
                <div style="display:block;width:100%;height:1px;background-color:rgb(230,230,230);margin:10px;margin-left:none;margin-right:none;"></div>
                <div class="ScrollableItemslist">
                    @foreach(var item1 in Model.ShoppingItems) 
                    {
                        <div class="ScrollableItemsOuter">
                            <div style="margin:auto">
                                <img style="margin-left:15px;border:none;border-bottom:1px solid rgb(230,230,230)" src="@Html.DisplayFor(modelitem => item1.Image)" />
                                <div style="margin-bottom:none;">
                                    <h3 style="margin-left:10px;margin-bottom:12.5px;">
                                        @Html.DisplayFor(modelItem => item1.Name)
                                    </h3>
                                    <p style="margin-left:10px;margin-bottom:20px;">
                                        £@Html.DisplayFor(modelItem => item1.price)
                                    </p>
                                    <a style="display:block;width:298px;height:50px;text-align:center;text-decoration:none;color:black;background-color:rgb(243,100,0)" href="/Items?id=@Html.DisplayFor(modelitem => item1.ShoppingItemId)"><span style="display:block;font-size:25px;auto;transform:translate(0,5px)">Order Now</span></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>